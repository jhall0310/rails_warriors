<div class="col-xs-12" id="form">



<%= form_for @blog do |f| %>
  <div class="form-group">
    <%= f.text_field :blog_title, class: "form-control", placeholder: "Blog Title", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :blog_content, class: "form-control", placeholder: "Blog Content" %>
  </div>
    <%= f.submit "Create Blog", class: "btn btn-block btn-success" %>
  </div>
<% end %>
</div>

<hr>
<div class="col-xs-12" id="blog_link">

<%= link_to "Back to Blogs", blogs_path, class: "links" %>

</div>
